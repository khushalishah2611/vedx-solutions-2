// Process Table
model HireDeveloperProcess {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  category    String
  subcategory String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("hire_developer_process")
