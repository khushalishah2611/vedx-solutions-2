// Hire Services (Development Services) Table
model HireDeveloperHireService {
  id          String   @id @default(cuid())
  category    String
  subcategory String?
  title       String
  description String?  @db.Text
  image       String
  heroTitle   String?
  heroDescription String? @db.Text
  heroImage   String?
  createdAt   DateTime @default(now())
