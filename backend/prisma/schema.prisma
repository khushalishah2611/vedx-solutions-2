// Why VedX Table
model HireDeveloperWhyVedx {
  id              String   @id @default(cuid())
  title           String
  description     String?  @db.Text
  image           String
  heroTitle       String?
  heroDescription String?  @db.Text
  heroImage       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

